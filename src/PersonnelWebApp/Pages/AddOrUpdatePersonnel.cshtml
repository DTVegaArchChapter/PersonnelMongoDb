@page
@model PersonnelWebApp.Pages.AddOrUpdatePersonnelModel
@{
    ViewData["Title"] = "Personnel Detail";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group" style="display: none">
                <label asp-for="Personnel.Id" class="control-label"></label>
                <input asp-for="Personnel.Id" class="form-control" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Personnel.UserName" class="control-label"></label>
                <input asp-for="Personnel.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Personnel.Password" class="control-label"></label>
                <input asp-for="Personnel.Password" class="form-control" />
                <h5 style="color:red">@Html.ValidationMessage("PasswordNull")</h5>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="PersonnelManagement">Back to List</a>
</div>